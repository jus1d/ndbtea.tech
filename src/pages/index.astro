---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'
import PostPreview from '@/components/writes/PostPreview.astro'

import { Image } from 'astro:assets'
import avatar from '../assets/avatar.png'

import { getAllPosts, sortMDByDate } from '@/utils'

const languages = ['Go', 'C/C++', 'Rust']
const backend = ['Git', 'Docker', 'PostgreSQL', 'MongoDB', 'Redis']
const spokenLanguages = ['Russian - Native', 'English - B2', 'Spanish - A1']

const MAX_POSTS = 10
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
---

<PageLayout meta={{ title: 'Home' }}>
	<div class='flex w-full flex-col gap-y-10'>
		<section class='flex flex-col items-center gap-y-7'>
			<Image src={avatar} alt='profile photo' class='h-28 w-auto rounded-full' loading='eager' />

			<div class='flex flex-col items-center gap-y-4'>
				<h1 class='text-3xl font-bold'>Artem F.</h1>
				<h1 class='text-xl text-muted-foreground'>@ndbtea</h1>
				<a
					href='https://t.me/m/2p5M4X-CMWIy'
					class='flex flex-row items-center gap-x-3 rounded-3xl border border-input px-4 py-2 text-sm shadow-sm hover:shadow-md'
				>
					<span class='relative flex items-center justify-center'>
						<span
							class='absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75'
						></span>
						<span class='relative inline-flex h-2 w-2 rounded-full bg-green-400'></span>
					</span>

					<p class='font-medium'>Contact me</p>
				</a>
				<div class='flex flex-wrap justify-center gap-x-7 gap-y-3'>
					<!-- Work -->
					<Label title='Place of Work'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M4.615 20q-.69 0-1.152-.462Q3 19.075 3 18.385v-9.77q0-.69.463-1.152Q3.925 7 4.615 7H9V5.615q0-.69.463-1.152Q9.925 4 10.615 4h2.77q.69 0 1.153.463q.462.462.462 1.152V7h4.385q.69 0 1.152.463q.463.462.463 1.152v9.77q0 .69-.462 1.152q-.463.463-1.153.463zm0-1h14.77q.23 0 .423-.192q.192-.193.192-.423v-9.77q0-.23-.192-.423Q19.615 8 19.385 8H4.615q-.23 0-.423.192Q4 8.385 4 8.615v9.77q0 .23.192.423q.193.192.423.192M10 7h4V5.615q0-.23-.192-.423Q13.615 5 13.385 5h-2.77q-.23 0-.423.192q-.192.193-.192.423zM4 19V8z'
							></path></svg
						>
					</Label>
					<!-- Location -->
					<Label title='Location'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M12.003 11.73q.668 0 1.14-.475q.472-.475.472-1.143t-.475-1.14q-.476-.472-1.143-.472t-1.14.476q-.472.475-.472 1.143t.475 1.14q.476.472 1.143.472M12 19.677q2.82-2.454 4.458-4.991q1.638-2.538 1.638-4.39q0-2.744-1.737-4.53T12 3.981q-2.621 0-4.359 1.785t-1.737 4.53q0 1.852 1.638 4.39q1.639 2.537 4.458 4.99m0 1.343q-3.525-3.117-5.31-5.814q-1.786-2.697-1.786-4.909q0-3.173 2.066-5.234Q9.037 3 12 3t5.03 2.062q2.066 2.061 2.066 5.234q0 2.212-1.785 4.909q-1.786 2.697-5.311 5.814m0-10.904'
							></path></svg
						>
					</Label>
					<!-- LinkedIn -->
					<Label
						title='Connect on Linkedin'
						as='a'
						href='https://www.linkedin.com/in/example/'
						target='_blank'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 16 16'
							class='h-5 w-5 text-foreground/75'
						>
							<path
								fill='currentColor'
								d='M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.54 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.83-.01-1.5-2.24.49-2.71-1.08-2.71-1.08-.36-.91-.88-1.15-.88-1.15-.72-.49.05-.48.05-.48.8.06 1.22.82 1.22.82.71 1.22 1.86.87 2.31.66.07-.51.28-.87.51-1.07-1.78-.2-3.65-.89-3.65-3.95 0-.87.31-1.58.82-2.14-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82A7.63 7.63 0 018 3.1c.68.003 1.36.092 2 .27 1.53-1.03 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.14 0 3.07-1.87 3.75-3.65 3.95.29.25.55.74.55 1.49 0 1.08-.01 1.95-.01 2.21 0 .21.15.46.55.38C13.71 14.54 16 11.54 16 8c0-4.42-3.58-8-8-8z'
							></path>
						</svg>
					</Label>
				</div>
			</div>
		</section>

		<Section title='About'>
			<p class='text-muted-foreground'>
				I'm a young backend (not only) developer with ~3 years of development expirience
				(non-commercial) and pretty cool sense of humor
			</p>
		</Section>

		<Section title='Education'>
			<Card
				heading='Computer Science'
				subheading='Bachelour - Samara National Research University named after Academician S.P. Korolev, Samara'
				date='Sep 2023 - present'
				altText='Computer Science bachelour'
			/>
		</Section>

		<Section title='Projects'>
			<!-- <Card
				heading='yodreik'
				subheading='Stop lying on the couch'
				date='Aug 2024 - present'
				altText='WIS - Programming Language'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>Server application for <b>yodreik</b> fitness application</li>
					<li>Written in Go</li>
				</ul>
				<a href='https://github.com/yodreik/backend'>Source Code</a>
			</Card> -->

			<Card
				heading='wis'
				subheading='Programming language'
				date='Dec 2023 - Feb 2024'
				altText='WIS - Programming Language'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>Stack-based, compiling, concatenative programming language</li>
					<li>Originally written in C++, got the “rewrite in Rust” disease</li>
					<li>Deployed with Docker & configured CI/CD</li>
				</ul>
				<a href='https://github.com/jus1d/wis'>Source Code</a>
			</Card>

			<Card
				heading='qarwett'
				subheading='Take a quick look at the schedule and go back to sleep'
				date='Sep 2023 - Dec 2023'
				altText='University schedule bot'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>Telegram-based interface for quick viewing of university class schedules</li>
					<li>Written in Go</li>
				</ul>
				<a href='https://github.com/jus1d/qarwett'>Source Code</a>
			</Card>

			<Card
				heading='make.sh'
				subheading='Shorten your long af urls'
				date='Jun 2023 - Sep 2023'
				altText='make.sh URL shortener'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>Web-application for creating shortened URLs</li>
					<li>Backend written in Go (Gin, PostgreSQG and Redis)</li>
					<li>Frontend built with Next.js framework</li>
					<li>Teleram bot in addition</li>
					<li>Whole application wrapped with Docker for easy deploy</li>
				</ul>
				<a href='https://github.com/makeshort'>Source Code</a>
			</Card>
		</Section>

		<!-- {
			allPostsByDate.length > 0 && (
				<Section title='Posts'>
					<ul class='flex flex-col gap-y-2'>
						{allPostsByDate.map((p) => (
							<li class='flex flex-col gap-x-2 sm:flex-row'>
								<PostPreview post={p} />
							</li>
						))}
					</ul>
				</Section>
			)
		} -->

		<Section title='Skills'>
			<SkillLayout title='Languages' skills={languages} />
			<SkillLayout title='Backend' skills={backend} />
			<SkillLayout title='Speak' skills={spokenLanguages} />
		</Section>
	</div>
</PageLayout>
